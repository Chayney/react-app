{
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Node", // ← ここ重要
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "src",
    "vitest-setup.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}